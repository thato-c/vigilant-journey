@using AutomotiveRepairSystem.ViewModels
@model ServiceViewModel
@{
    ViewData["Title"] = "Create new Service";
}

<h1>Create a new Service</h1>

<form asp-controller="Service" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PriceExclVAT">Price Excl. VAT</label>
        <input asp-for="PriceExclVAT" class="form-control" />
        <span asp-validation-for="PriceExclVAT" class="text-danger"></span>
    </div>

    <button type="submit">Create Service</button>
</form>
