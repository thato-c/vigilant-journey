@using AutomotiveRepairSystem.ViewModels
@model ServiceDetailViewModel
@{
    ViewData["Title"] = "Delete Service";
}

<h1>Delete Service</h1>

<form asp-controller="Service" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ServiceId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="PriceExclVAT">Price Excl. VAT</label>
        <input asp-for="PriceExclVAT" class="form-control" readonly />
    </div>

    <button type="submit">Delete</button>
</form>
